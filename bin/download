#!/usr/bin/env bash

set -euo pipefail

# shellcheck source=lib/utils.bash
source "$(dirname "$0")/../lib/utils.bash"

mkdir -p "$ASDF_DOWNLOAD_PATH"
platform=$(get_platform)
ext=".tar.gz"
if [ "$platform" == "windows" ]; then
  ext=".zip"
fi

release_file="$ASDF_DOWNLOAD_PATH/$TOOL_NAME-$ASDF_INSTALL_VERSION$ext"

# Download tar.gz file to the download directory
download_release "$ASDF_INSTALL_VERSION" "$release_file"

case $platform in
  windows)
    unzip "$release_file" -d "$ASDF_DOWNLOAD_PATH" || fail "Could not uncompress"
    ;;
  *)
    tar zxvf "$release_file" -C "$ASDF_DOWNLOAD_PATH" >/dev/null || fail "Could not uncompress"
    ;;
esac

# Remove the tar.gz file since we don't need to keep it
rm "$release_file"
